<tr>
  <th scope="row"><%= user.id %></th>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td><%= user.created_at %></td>
  <td>
    <%= link_to t("general.btn.edit"), edit_admin_user_path(user), class: "btn btn-secondary" %>
    <%= link_to t("general.btn.delete"), admin_user_path(user), class: "btn btn-danger",
                data: { method: :delete, confirm: t("general.confirm.delete") } %>
  </td>
</tr>