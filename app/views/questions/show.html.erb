<% provide :page_title, "Question info" %>
<% currently_at t("menu.questions") %>

<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_created_at %>">
  <%= @question.formatted_created_at %>
</time>

<div class="lead my-3">
  <%= sanitize @question.body %>
</div>

<%= link_to t("general.btn.show"), question_path(@question), class: "btn btn-primary" %>
<%= link_to t("general.btn.edit"), edit_question_path(@question), class: "btn btn-secondary" %>
<%= link_to t("general.btn.delete"), question_path(@question), class: "btn btn-danger",
            data: { method: :delete, confirm: t("general.confirm.delete") } %>

<hr class="my-3">

<h2><%= t(".first_header") %></h2>

<%= render "shared/errors", object: @answer %>

<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>

  <%= f.submit t("general.btn.submit_answer"), class: "btn btn-primary" %>
<% end %>

<h2 class="mt-5 mb-3"><%= t(".second_header") %></h2>

<%= pagination @pagy %>

<%= render partial: "answers/answer", collection: @answers,
           as: :answer, locals: { question: @question } %>

<%= pagination @pagy %>